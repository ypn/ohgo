<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <android.support.design.widget.AppBarLayout
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/color_action_bar"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/evidence_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="element1"
                        app:layout_collapseMode="parallax"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="top"
                        android:background="@drawable/gradient"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient_bottom"/>
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/pgb_load_image"
                        android:visibility="invisible"
                        style="@android:style/Widget.Holo.ProgressBar.Large"
                        />
                </FrameLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/tb_main"
                    android:elevation="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:minHeight="?attr/actionBarSize"
                    app:theme="@style/Theme.MyTheme"
                    app:layout_collapseMode="pin"
                    />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:id="@+id/more_info"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/address"
                        android:lineSpacingExtra="2dp"
                        android:textSize="16sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            style="@style/more_info_text"
                            android:text="@string/report_at"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/report_time"
                            android:textSize="16sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="14dp"
                        >
                        <ImageView
                            android:layout_width="@dimen/icon_like"
                            android:layout_height="@dimen/icon_like"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/vote_up"
                            android:src="@drawable/group_copy2"
                            android:layout_marginRight="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/report_vote_up"
                            android:text="0"
                            android:layout_marginRight="25dp"
                            android:textColor="@color/content_comment"
                            android:textSize="@dimen/count_like"
                            android:layout_gravity="center_vertical"
                            />
                        <ImageView
                            android:layout_width="@dimen/icon_like"
                            android:layout_height="@dimen/icon_like"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/group_copy3"
                            android:layout_marginRight="5dp"
                            android:id="@+id/btn_thumb_down"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/report_vote_down"
                            android:text="0"
                            android:layout_marginRight="25dp"
                            android:textColor="@color/content_comment"
                            android:textSize="@dimen/count_like"
                            android:layout_gravity="center_vertical"
                            />
                        <ImageView
                            android:layout_width="@dimen/icon_like"
                            android:layout_height="@dimen/icon_like"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/group_2copy"
                            android:layout_marginRight="5dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/report_count_comment"
                            android:text="0"
                            android:textColor="@color/content_comment"
                            android:textSize="@dimen/count_like"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#aaa"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/more_info"
                    android:id="@+id/separate_line"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/wrapp_comment"
                    android:layout_below="@+id/separate_line"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/comment_box"
                        android:visibility="invisible"
                        />
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@android:style/Widget.Holo.ProgressBar.Large"
                        android:id="@+id/pgb_load_comment"
                        android:layout_gravity="center_horizontal"
                        android:visibility="invisible"
                        />
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wrapp_comment"
                    android:padding="10dp"
                    android:text="ypn"
                    android:visibility="invisible"
                    />

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <ohgo.vptech.smarttraffic.main.adapters.ActionEditText
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:id="@+id/edt_entry_comment"
            android:hint="@string/write_comment"
            android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
            android:imeOptions="actionSend"
            android:textColor="#555"
            android:maxLines="4"
            android:background="@android:color/transparent"
            android:padding="10dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_gravity="center"
            android:id="@+id/btn_send_comment"
            />
    </LinearLayout>
</RelativeLayout>



