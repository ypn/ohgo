<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rd_report_state"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/rd_visible"
            android:button="@null"
            android:text="@string/report_state_accident_mirror"
            android:background="@drawable/radio_accident_minor"
            android:layout_marginTop="70dp"
            android:textColor="@color/name_user_comment"
            android:gravity="center_horizontal|bottom"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_accident_major"
            android:button="@null"
            android:id="@+id/rd_hide"
            android:textColor="@color/name_user_comment"
            android:text="@string/report_state_accident_major"
            android:gravity="center_horizontal|bottom"
            />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_accident_other_side"
            android:button="@null"
            android:textColor="@color/name_user_comment"
            android:id="@+id/rd_otherside"
            android:text="@string/report_state_accident_other_side"
            android:gravity="center_horizontal|bottom"
            />
    </RadioGroup>
</FrameLayout>