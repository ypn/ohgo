<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:top="@dimen/background_space"
                android:right="@dimen/check_space_ver"
                android:bottom="@dimen/background_space"
                android:left="@dimen/check_space_ver">
                >
                <bitmap android:src="@drawable/accident_normal"/>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:top="@dimen/background_space"
                android:right="@dimen/background_space"
                android:bottom="@dimen/background_space"
                android:left="@dimen/background_space">
                <bitmap android:src="@drawable/accident_normal_deactive"></bitmap>
            </item>
        </layer-list>
    </item>
</selector>